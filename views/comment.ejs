<br />
<% post.comments.forEach(function (comment, index) { %>
  <div style="padding-left:4em">
    <p><img src="<%= comment.head %>" class="l_head" /><a href="<%= comment.website %>"><%= comment.name %></a>
    <span class="info"> Reply at: <%= comment.time %></span></p>
    <p><%- comment.content %></p>
  </div>
<% }) %>

<form method="post" style="margin-top: 5%" action="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">
<% if (user) { %>
  User Name：<input type="text" name="name" value="<%= user.name %>" /><br />
  Email：<input type="text" name="email" value="<%= user.email %>" /><br />
  Website：<input type="text" name="website" value="/u/<%= user.name %>" /><br />
<% } else { %>
  User Name：<input type="text" name="name" /><br />
  Email：<input type="text" name="email" /><br />
  Website：<input type="text" name="website" value="http://" /><br />
<% } %>
  <textarea name="content" rows="5" cols="80"></textarea><br />
  <button class="btn btn-primary" type="submit" value="Comment" style="margin-left: 40%; margin-top: 3%"> Comment
    </button>
  <!--<input type="submit" value="Comment" />-->
</form>